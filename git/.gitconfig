[user]
    name = jartigag
    email = jartigag@pm.me
[core]
    editor = vim
    autocrlf = input
    safecrlf = false
[color]
    ui = auto
[alias]
    lg = log --graph --pretty --decorate --all
    #lgs = log --graph --pretty=format:"%h%x09%C(yellow)%an%x09%Cred%ad%x09%Cgreen%d%x09%Creset%s" #%h=hash,%x09=tab,%an=authorname,%ad=authordate(on --date= format),%s=subject
    lgs = log --graph --pretty=format:"%h%x09%C(yellow)%an%x09%Cred%ad%x09%Creset%s%Cgreen%d" #%h=hash,%x09=tab,%an=authorname,%ad=authordate(on --date= format),%s=subject
    pl = pull origin
    rs = reset --soft HEAD~1
    st = status
    df = diff
    ch = checkout -- .
[pull]
    ff = only
[diff "ISO-8859-1"]
    textconv = "iconv -f ISO-8859-1 -t utf-8"
[status]
    submoduleSummary = true
