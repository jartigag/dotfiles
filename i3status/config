wireless wlo1 {
        format_up = "W: %ip (%essid%quality)" #, %bitrate
        format_down = "W: down"
        on_click 1 = "exec /usr/bin/kcmshell5 kcm_networkmanagement.desktop"
}

ethernet eno2 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip" # (%speed)
        format_down = "E: down"
        on_click 1 = "exec /usr/bin/kcmshell5 kcm_networkmanagement.desktop"
}

