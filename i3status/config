general {
        colors = true
        color_good =     "#a3be8c"
        color_bad =      "#bf616a"
        color_degraded = "#d08770"
        output_format = "i3bar"
        interval = 1
}

order += "sysdata"
order += "loadavg"
order += "disk /"
order += "wireless wlo1"
order += "ethernet eno2"
order += "battery 0"
order += "cpu_temperature 1"
order += "volume master"
order += "time"

sysdata {
        on_click 1 = "exec kitty -e htop"
}

loadavg {
    format = '[\?color=1avg {1min}] '
    format += '[\?color=5avg {5min}] '
    format += '[\?color=15avg {15min}]'
}

disk "/" {
        format = "%free"
        on_click 1 = "exec dolphin"
}

wireless wlo1 {
        format_up = "W: %ip (%essid%quality)" #, %bitrate
        format_down = "W: down"
        on_click 1 = "exec kcmshell5 kcm_networkmanagement.desktop"
}

ethernet eno2 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip" # (%speed)
        format_down = "E: down"
        on_click 1 = "exec kcmshell5 kcm_networkmanagement.desktop"
}

battery 0 {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "âš¡CHR"
        status_bat = "ðŸ”‹BAT"
        status_unk = "?UNK"
        status_full = "â˜»FULL"
        low_threshold = 10
}

cpu_temperature 1 {
        format = "T: %degrees Â°C"
}

volume master {
        format = "Vol:%volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        on_click 1 = "exec kcmshell5 kcm_pulseaudio"
}

time {
        format = "%a %m-%m-%Y %H:%M:%S"
        on_click 1 = "exec plasmawindowed org.kde.plasma.calendar"
}
